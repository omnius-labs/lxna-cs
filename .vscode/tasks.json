{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gen-envfile",
            "windows": {
                "command": "pwsh",
                "args": [
                    "-Command",
                    "if (!(Test-Path .env)) { New-Item .env -ItemType File }"
                ]
            },
            "linux": {
                "command": "bash",
                "args": ["${workspaceFolder}/eng/gen-envfile.sh"]
            },
            "osx": {
                "command": "touch .env"
            }
        },
        {
            "label": "design-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Omnius.Lxna.Ui.Desktop/Omnius.Lxna.Ui.Desktop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "env": {
                    "BuildTargetName": "vscode-design",
                    "DesignMode": "true"
                }
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "gen-envfile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Omnius.Lxna.Ui.Desktop/Omnius.Lxna.Ui.Desktop.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "options": {
                "env": {
                    "BuildTargetName": "vscode"
                }
            },
            "problemMatcher": "$msCompile",
            "dependsOn": "gen-envfile"
        }
    ]
}
