        x:Class="Omnius.Lxna.Ui.Desktop.App"
        xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <conv:PlusOneValueConverter x:Key="PlusOneValueConverter"/>
    </Application.Resources>
    <Application.Styles>
        <styling:FluentAvaloniaTheme PreferUserAccentColor="True" UseSystemFontOnWindows="True" TextVerticalAlignmentOverrideBehavior="Disabled"/>
        <StyleInclude Source="avares://FluentAvalonia.ProgressRing/Styling/Controls/ProgressRing.axaml" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <StyleInclude Source="/View/Styles/Base.xaml" />
        <StyleInclude Source="/View/Styles/SideBar.xaml" />
        <StyleInclude Source="/View/Styles/OptionMenu.xaml" />
        <StyleInclude Source="/View/Styles/Thumbnail.xaml" />
        <StyleInclude Source="/View/Styles/TreeCheck.xaml" />
        <StyleInclude Source="/View/Styles/TreeItem.xaml" />
    </Application.Styles>
</Application>
